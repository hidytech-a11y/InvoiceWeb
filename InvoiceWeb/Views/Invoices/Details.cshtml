@model Invoice

<h1 class="text-center mb-3">Invoice Details</h1>

<div class="row g-2 mb-3">
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-header">
                Invoice #@Model.Number
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Invoice ID</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.Id</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Status</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.Status</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Issue Date</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.IssueDate?.ToString("yyyy-MM-dd")</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Due Date</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.DueDate?.ToString("yyyy-MM-dd")</p>
                    </div>
                </div>

                <hr />

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Service</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.Service</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Unit Price</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.UnitPrice.ToString("C")</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Quantity</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.Quantity</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Total</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@((Model.UnitPrice * Model.Quantity).ToString("C"))</p>
                    </div>
                </div>

                <hr />

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Client</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.ClientName</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.Email</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Phone</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.Phone</p>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Address</label>
                    <div class="col-sm-8">
                        <p class="form-control-plaintext">@Model.Address</p>
                    </div>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <div>
                    <a asp-controller="Invoices" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                </div>
                <a asp-controller="Invoices" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>